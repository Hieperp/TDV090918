@using TotalPortal.Configuration
@using TotalModel.Models;

@(Html.Kendo().Grid<MaterialIssuePendingFirmOrder>()
    .Name("materialIssuePendingFirmOrderGrid")
    .Columns(columns =>
    {
        columns.Bound(c => c.FirmOrderCode).Title("Số ĐH").Width(50);
        columns.Bound(c => c.FirmOrderReference).Title("Số ĐH").Width(50);
        columns.Bound(c => c.CustomerCode).Title("khách hàng").Width(140);
        columns.Bound(c => c.CustomerName).Title("khách hàng").Width(140);
        columns.Bound(c => c.WorkshiftCode).Title("khách hàng").Width(140);
        columns.Bound(c => c.ProductionLineCode).Title("khách hàng").Width(140);
    })
    .ToolBar(toolbar =>
    {
        toolbar.Template(@<text>
            <div class="toolbar" style="float: right;">
                <label>Nhập số đơn hàng/ hoặc mã, tên, MST khách hàng hay đơn vị, người nhận hàng, hoặc mã kho</label>
                <input id="materialIssuePendingFirmOrderFilter" class="k-textbox" style="text-align: center; margin-right: 13px;" onkeyup="materialIssuePendingFirmOrderFilter_KeyUp()" />
            </div>
        </text>);
    })
        .Scrollable(s => s.Height(Settings.PopupContentHeight))
        .DataSource(ds => ds.Ajax()
            .Read(read => read.Action("GetFirmOrders", "MaterialIssueAPIs", new { area = "Inventories" }).Data("onAdditionalGetFirmOrders"))
            .ServerOperation(false)
        )
        .Selectable()
)

<script type="text/javascript">
    function onAdditionalGetFirmOrders(e) {
        return {
            locationID: window.parent.requireConfig.pageOptions.LocationID
        };
    }

    function materialIssuePendingFirmOrderFilter_KeyUp() {
        var materialIssuePendingFirmOrderFilter = $("#materialIssuePendingFirmOrderFilter").val(), gridDetails = $("#materialIssuePendingFirmOrderGrid").data("kendoGrid");

        if (materialIssuePendingFirmOrderFilter && materialIssuePendingFirmOrderFilter.length >= "@Settings.AutoCompleteMinLenght") {
            gridDetails.dataSource.filter({
                logic: "or",
                filters: [
                    { field: "FirmOrderCode", operator: "contains", value: materialIssuePendingFirmOrderFilter },

                    { field: "WorkshiftCode", operator: "contains", value: materialIssuePendingFirmOrderFilter },
                ]
            });


        } else {
            if (gridDetails.dataSource.filter() != undefined)
                gridDetails.dataSource.filter({});
        }
    }

    $("#materialIssuePendingFirmOrderGrid").dblclick(function (e) {
        okButton_Click();
    })
</script>

